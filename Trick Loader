var thing = 0;

rectMode(CENTER);

draw = function() {
    if(frameCount % 6 === 3){
        thing ++;
    }
    
    noStroke();
    background(255, 255, 255);
    fill(250);
    rect(200, 200, 30, 30);
    fill(235);
