        drawLetter("E", cyberX + 270, 150, cyberSz);
        drawLetter("R", cyberX + 310, 150, cyberSz);
        textFont(createFont("Courier New"));
        textSize(40);
        fill(0, 204, 255);
        text("TREK", 201, 241);
        fill(0, 255, 0);
        text("TREK", 200, 240);
