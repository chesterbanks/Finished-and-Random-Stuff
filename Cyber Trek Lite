        rect(130, 350, 140, 40, 10);
        ellipse(130, 370, 10, 10);
        ellipse(270, 370, 10, 10);
        fill(0, 255, 0);
        textFont(DEFAULT_FONT);
        textSize(12);
        text("Chester Banks | July - September 2014 | Version 1.0", 200, 270);
        textSize(25);
        text("START", 200, 370);
        cyberX += cyberSpeed;
        if(cyberX > -41){
            cyberSpeed = -2;
        }
        if(cyberX < -44){
            cyberSpeed = +2;
        }
        if(mouseX > 130 && mouseX < 270 && mouseY > 350 && mouseY < 390){
