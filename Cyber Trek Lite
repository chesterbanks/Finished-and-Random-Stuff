var draw = function() {
    if(mode === "Load"){
        background(41, 41, 41);
        textSize(10);
        fill(0, 255, 0);
        textAlign(LEFT, LEFT);
        introText = fullIntro.substring(0, introText.length);
        text(introText, 0, 0, 410, 400);
        frameRate(100);
        introText+=frameRate / 10;
        textAlign(CENTER, CENTER);
        frameRate(10);
        fill(56, 56, 56);
        rect(50, 270, 300, 100, 10);
        /*fill(46, 46, 46);
        var tn=random(-1,1);
        drawGears(tn+n);
        if(frameCount%t===0){
            n+=5;
        }*/
        fill(0, 255, 0);
        text(loadingStuff[round(random(0, loadingStuff.length))] + "...", 200, 300);
        textFont(DEFAULT_FONT, 18);
        frameRate(30);
        fill(255, 255, 255);
        text("Cyber Trek made by", 200, 40);
        text("Chester Banks", 200, 280);
        fill(130, 130, 130);
        text("Enjoy the game!", 200, 350);
        logo(200, 160, 2);
        noFill();
        rectMode(CENTER);
        strokeWeight(1);
        stroke(0, 0, 0);
        rect(200, 320, 300, 20);
        rectMode(LEFT);
        fill(0, 255, 0);
        noStroke();
        rect(55, 315, ant, 10);
        if(ant < 290){
            ant += 0.5;
        }
        if(ant > 289){
            mode = "Start";
        }
    }
    if(mode === "Start"){
        background(0, 0, 0);
        stroke(0, 255, 0);
        strokeWeight(1);
        line(0, 50, 250, 50);
        line(0, 75, 250, 75);
        line(0, 100, 250, 100);
        line(250, 50, 300, 75);
        line(250, 75, 300, 100);
        line(250, 100, 300, 125);
        fill(0, 0, 0);
        ellipse(300, 75, 10, 10);
        ellipse(300, 100, 10, 10);
        ellipse(300, 125, 10, 10);
        fill(0, 204, 255);
        drawLetter("C", cyberX + 153, 153, cyberSz);
        drawLetter("Y", cyberX + 193, 153, cyberSz);
        drawLetter("B", cyberX + 230, 153, cyberSz);
        drawLetter("E", cyberX + 270, 153, cyberSz);
        drawLetter("R", cyberX + 310, 153, cyberSz);
